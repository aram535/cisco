<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="true"
                     xmlns:log4j='http://jakarta.apache.org/log4j/'>

    <appender name="file" class="org.apache.log4j.FileAppender">
        <param name="file" value="C:\\cisco\\logs\\server.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"/>
        </layout>
    </appender>

    <appender name="file-cisco" class="org.apache.log4j.FileAppender">
        <param name="file" value="C:\\cisco\\logs\\cisco.log"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"/>
        </layout>
    </appender>

    <logger name="com.cisco" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="file-cisco"/>
    </logger>

    <root>
        <level value="INFO"/>
        <appender-ref ref="file"/>
    </root>

</log4j:configuration>